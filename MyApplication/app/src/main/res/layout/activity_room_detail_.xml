<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dirase.hotelsys.room_detail_Activity">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房       型："
                    android:textSize="24dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/room_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000FF"
                    android:text="roomname"
                    android:gravity="center"
                    android:textSize="24dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间价格："
                    android:textSize="24dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/room_details_used"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#0000FF"
                    android:text="room_level"
                    android:textSize="24dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:text="是否可用："/>

                <TextView
                    android:id="@+id/room_details_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="used"
                    android:textColor="#0000FF"
                    android:textSize="24dp"
                    android:gravity="center"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间配置："
                    android:textColor="#000000"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/room_details_things"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="配置"
                    android:textColor="#0000FF"
                    android:textSize="24dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/room_details_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="预订"
                android:background="#02F78E"
                />

        </LinearLayout>
</ScrollView>








</android.support.constraint.ConstraintLayout>
